<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <defaults autowire="true" autoconfigure="true" public="false" />
        <!--
        <prototype namespace="Thinkbig\Bundle\FileUploaderBundle\" resource="../../../../../../src/Thinkbig/Bundle/FileUploaderBundle/*" exclude="../../../../../../src/Thinkbig/Bundle/FileUploaderBundle/{Entity,Repository,Tests}" />

    	-->

        <service id="Thinkbig\Bundle\FileUploaderBundle\Form\Type\UploadedFileType"  autowire="true" public="true">
            <tag name="form.type" />
        </service>
   
        <service class="Thinkbig\Bundle\FileUploaderBundle\EventListener\UploadListener">
             <tag name="kernel.event_listener" event="oneup_uploader.post_persist" method="onUpload" />
        </service>

        <service id="fileuploader.twig_extension"
            class="Thinkbig\Bundle\FileUploaderBundle\Twig\FileUploaderExtension"
            public="false">
            <argument type="service" id="Doctrine\ORM\EntityManagerInterface" />
            <argument type="service" id="Symfony\Component\Routing\Generator\UrlGeneratorInterface" />
            <argument type="service" id="@oneup_flysystem.mount_manager" />
            <tag name="twig.extension" />
        </service>
    </services>
</container>
